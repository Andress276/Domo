<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Theme for the light mode -->
        <item name="android:windowBackground">@android:color/background_light</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>

        <!-- Add more attributes as needed for the light theme -->

    </style>

    <!-- Theme for the dark mode -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <item name="android:windowBackground">@android:color/background_dark</item>
        <item name="android:colorPrimary">@color/colorPrimaryDark</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>

        <!-- Add more attributes as needed for the dark theme -->

    </style>

</resources>
