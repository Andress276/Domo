<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/fondo"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".fragment.HomeFragment">

        <!-- Imagen del logo -->
        <ImageView
            android:layout_width="290dp"
            android:layout_height="455dp"
            android:layout_gravity="center"
            android:paddingTop="60dp"
            android:paddingBottom="195dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo" />

        <!-- Texto de bienvenida -->
        <TextView
            android:id="@+id/textViewWelcomeHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BIENVENIDO"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/my_custom_font"
            android:shadowColor="#80000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:background="#80000000"
            android:padding="16dp"/>

        <TextView
            android:id="@+id/textViewWelcomeHome2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Larga vida para tus plantas"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_marginTop="560dp"
            android:shadowColor="#80000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:padding="16dp"/>



        <ImageView
            android:layout_width="580dp"
            android:layout_height="900dp"
            android:layout_gravity="center"
            android:paddingTop="950dp"
            android:paddingBottom="175dp"
            android:scaleType="centerCrop"
            android:src="@drawable/rama" />

    </FrameLayout>
</ScrollView>
