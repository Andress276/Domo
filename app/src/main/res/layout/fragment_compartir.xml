<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo">


    <ImageView
        android:id="@+id/imageViewApp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        />

    <TextView
        android:id="@+id/textViewIntro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Descubre nuestra increíble app!"
        android:textSize="24sp"
        android:layout_below="@id/imageViewApp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"/>

    <!-- Agrega otros elementos según sea necesario -->

    <Button
        android:id="@+id/btnCompartir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Compartir la app"
        android:layout_below="@id/textViewIntro"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"/>

    <ImageView
        android:id="@+id/imageViewApp2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/compartir"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        />
</RelativeLayout>
